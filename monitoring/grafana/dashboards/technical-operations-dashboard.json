{
  "dashboard": {
    "id": null,
    "title": "Reboot Media - Technical Operations",
    "tags": ["technical", "operations", "infrastructure"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-2h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "row",
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Service Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"frontend-blue\"}",
            "legendFormat": "Frontend Blue",
            "refId": "A"
          },
          {
            "expr": "up{job=\"frontend-green\"}",
            "legendFormat": "Frontend Green",
            "refId": "B"
          },
          {
            "expr": "up{job=\"backend-blue\"}",
            "legendFormat": "Backend Blue",
            "refId": "C"
          },
          {
            "expr": "up{job=\"backend-green\"}",
            "legendFormat": "Backend Green",
            "refId": "D"
          },
          {
            "expr": "up{job=\"load-balancer\"}",
            "legendFormat": "Load Balancer",
            "refId": "E"
          },
          {
            "expr": "up{job=\"redis\"}",
            "legendFormat": "Redis",
            "refId": "F"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center"
        },
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 1}
      },
      {
        "id": 3,
        "title": "Request Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=~\"backend.*\"}[1m]))",
            "legendFormat": "Total Requests/sec",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{job=~\"backend.*\",code=~\"2..\"}[1m]))",
            "legendFormat": "2xx Success/sec",
            "refId": "B"
          },
          {
            "expr": "sum(rate(http_requests_total{job=~\"backend.*\",code=~\"4..\"}[1m]))",
            "legendFormat": "4xx Client Errors/sec",
            "refId": "C"
          },
          {
            "expr": "sum(rate(http_requests_total{job=~\"backend.*\",code=~\"5..\"}[1m]))",
            "legendFormat": "5xx Server Errors/sec",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "opacity"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 5}
      },
      {
        "id": 4,
        "title": "Response Time Distribution",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=~\"backend.*\"}[1m])) by (le))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(http_request_duration_seconds_bucket{job=~\"backend.*\"}[1m])) by (le))",
            "legendFormat": "P90",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=~\"backend.*\"}[1m])) by (le))",
            "legendFormat": "P95",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=~\"backend.*\"}[1m])) by (le))",
            "legendFormat": "P99",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 5}
      },
      {
        "id": 5,
        "title": "Infrastructure Metrics",
        "type": "row",
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 13}
      },
      {
        "id": 6,
        "title": "CPU Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{ instance }}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 14}
      },
      {
        "id": 7,
        "title": "Memory Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "{{ instance }}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 95}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 14}
      },
      {
        "id": 8,
        "title": "Disk Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"})) * 100",
            "legendFormat": "{{ instance }}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 14}
      },
      {
        "id": 9,
        "title": "Network I/O",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{device!=\"lo\"}[1m])",
            "legendFormat": "{{ instance }} - {{ device }} In",
            "refId": "A"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{device!=\"lo\"}[1m]) * -1",
            "legendFormat": "{{ instance }} - {{ device }} Out",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22}
      },
      {
        "id": 10,
        "title": "Disk I/O",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(node_disk_read_bytes_total[1m])",
            "legendFormat": "{{ instance }} - {{ device }} Read",
            "refId": "A"
          },
          {
            "expr": "rate(node_disk_written_bytes_total[1m]) * -1",
            "legendFormat": "{{ instance }} - {{ device }} Write",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22}
      },
      {
        "id": 11,
        "title": "Application Metrics",
        "type": "row",
        "collapsed": false,
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 30}
      },
      {
        "id": 12,
        "title": "Error Rate by Endpoint",
        "type": "table",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=~\"backend.*\",code=~\"5..\"}[5m])) by (method, handler) / sum(rate(http_requests_total{job=~\"backend.*\"}[5m])) by (method, handler) * 100",
            "legendFormat": "{{ method }} {{ handler }}",
            "refId": "A",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "align": "center",
              "displayMode": "color-background"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 31}
      },
      {
        "id": 13,
        "title": "Top Slowest Endpoints",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=~\"backend.*\"}[5m])) by (method, handler, le)))",
            "legendFormat": "{{ method }} {{ handler }}",
            "refId": "A",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "align": "center",
              "displayMode": "color-background"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.5},
                {"color": "red", "value": 1.0}
              ]
            }
          }
        },
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 31}
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up, instance)",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "links": [
      {
        "title": "Executive Dashboard",
        "url": "/d/executive/reboot-media-executive-dashboard"
      },
      {
        "title": "Marketing Dashboard",
        "url": "/d/marketing/reboot-media-marketing-dashboard"
      }
    ],
    "version": 1
  }
}